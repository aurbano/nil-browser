{
  "name": "nil-browser",
  "version": "0.0.1",
  "description": "Nil browser extensions",
  "main": "dist/index.js",
  "repository": "git@github.com:aurbano/nil-browser.git",
  "author": "Alejandro U. Alvarez <aluralma@gmail.com>",
  "license": "AGPL-3",
  "private": true,
  "scripts": {
    "start": "npm run webpack",
    "webpack": "./node_modules/.bin/webpack --config internals/webpack.config.js",
    "watch": "npm run webpack -- --watch",
    "lint": "tslint --project ./ --format stylish 'src/**/*.ts?(x)'",
    "lint:fix": "npm run lint -- --fix",
    "build:chrome": "rimraf ./dist/chrome && cross-env TARGET=chrome npm run webpack",
    "build:opera": "rimraf ./dist/opera && cross-env TARGET=opera npm run webpack",
    "build:firefox": "rimraf ./dist/firefox && cross-env TARGET=firefox npm run webpack",
    "build": "npm run build:chrome && npm run build:opera && npm run build:firefox",
    "dist": "npm run lint && cross-env NODE_ENV=production npm run build:chrome && cross-env NODE_ENV=production npm run build:opera && cross-env NODE_ENV=production npm run build:firefox",
    "watch:chrome": "cross-env TARGET=chrome npm run watch",
    "watch:opera": "cross-env TARGET=opera npm run watch",
    "watch:firefox": "cross-env TARGET=firefox npm run watch"
  },
  "dependencies": {
    "@types/chrome": "0.0.88",
    "@types/react": "^16.7.8",
    "@types/react-dom": "^16.0.11",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^5.2.1",
    "css-loader": "^3.2.0",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rimraf": "^3.0.0",
    "style-loader": "^1.0.0",
    "terser-webpack-plugin": "^2.0.1",
    "ts-loader": "^6.0.4",
    "tslint": "^5.19.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.1.6",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.1.2",
    "webpack-webextension-plugin": "^0.2.0",
    "write-file-webpack-plugin": "^4.5.1",
    "zip-webpack-plugin": "^3.0.0"
  }
}
