{
  "name": "Nils",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Nils extension for the browser",
  "homepage_url": "https://getnils.app",
  "icons": {
    "512": "assets/icons/icon512-orange.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "512": "assets/icons/icon512-gray.png"
    },
    "default_title": "Nils - Tip the web",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "cookies",
    "*://*.nils.local/"
  ],
  "content_scripts": []
}