{
  "name": "Nil",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Nil extension for the browser",
  "homepage_url": "https://nil.app",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Nil Options",
    "default_popup": "dist/app/popup.html"
  },
  "permissions": [
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "dist/inject/index.js"
      ]
    }
  ]
}